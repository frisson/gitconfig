[alias]
    br = branch
    co = checkout
    lg = log --color --date=local --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
    log = log --topo-order --decorate
    st = status -sb
    up = fetch --all --prune

[diff]
    renames = copy

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
    
[color "diff"]
    frag = magenta bold
    meta = yellow bold
    new = green bold
    old = red bold
    
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    whitespace = space-before-tab,trailing-space,cr-at-eol
    ignorecase = false

[fetch]
    prune = true

[pack]
    threads = 0

[push]
    default = current
